<!DOCTYPE html>
<html lang="en">
	<head>		
	   <% include ../partials/bootstrap-head %>
	</head>
	<body class="">
<!-- Pseudo Header -->
		<div class="row">
					<div class="col col-12">
					 <% include ../partials/main-nav%>
					</div>	
				</div>
				<div class="row m-3">
						<div class="col-lg-3 col-sm-3 col-xs-12">
							<div class="card">
								<div class="card-header">
									Your assignments
								</div>
				
				
								<div class="list-group">
									<a class="list-group-item list-group-item-action" href="#">Grades</a>
									<a class="list-group-item list-group-item-action" href="#">Calendar</a>
									<a class="list-group-item list-group-item-action" href="#">Course Block 1 - Syllabus</a>
								</div>
				
								<a class="list-group-item list-group-item-action" href="#">Course Block 2 - Syllabus </a>
							</div>
						</div>
<div class="col-md-6">
		<div class="row">
			<div class="col-md-3">
				<!-- List of Person is messaging -->
				<a href="" class="inbox-user-card-link">
					<div class="inbox-user-card">
						<h5><% ="HelloWorld" %></h5> 
						<!-- <span>1/1/19</span> -->
						<p>The first bit of the messege?</p>
					</div>
				</a>
			</div>
			<div class="col-md-9">
				<div id="message-inbox">
					<% for(var i =0; i < chats[0][1].length; i++) { %>
						<% if(chats[0][1][i][0]) { %>
							<!-- From User -->
							<div class=" row incomming-messege messege padding-top">
									<p><%= chats[0][1][i][1] %></p>
								</div>
							<% } else { %>
								<!-- To User -->
								<div class="row outgoing-messege messege padding-top">
										<p><%= chats[0][1][i][1] %></p>
									</div>
								<% } %>
					<% } %>
					<!-- Close messege Inbox -->
				</div>
				<div id="text-input" class="row">
					<form class="row">
							<div class="form-check-inline">
									<input id="" type="text" name="Messege" placeholder="Send a Message!" class="form-control">
									<input type="submit" value="Submit" class="btn btn-success">
							</div>

					</form>
					<!-- Close text-input -->
				</div>
				<!-- Close col-md-9 -->
			</div>
			<!-- Close Row -->
		</div>
		<!-- Close Col md-6 -->
	</div>


	<div class="col-lg-3 col-sm-12 col-xs-12">
			<% include ../partials/ilearn-support-card%>
		</div>
	</div>
</div>
	</body>
</html>

<!-- This is obviosly bad practice and only used as a staging area for CSS for this page-->
<style>
	.inbox-user-card-link:hover{
		text-decoration: none;
	}
	.inbox-user-card-link:active{
		text-decoration: none;
		background-color: lightgray;
	}
	#message-inbox{
		height:80%;
		display: block;
	}
	#text-input{
		float: bottom;
		background-color:white;
		width: 100%;
	}
	#input-box{
		width: 80%;
	}
	.incomming-messege{
		background-color: lightgrey;

	}
	.outgoing-messege{
		float: right;
		text-align: right;
		background-color:lightblue; 
	}
	.top-spacing-5{
		margin-top: 5px;
		padding-top: 5px;
	}
	.messege {
		width: 80%;
		border: 1px solid black;
		border-radius: 5px;
		padding: 5px;
		margin-top: 5px;
	}
</style>