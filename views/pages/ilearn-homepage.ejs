<!DOCTYPE html>
<html lang="en">
	<head>
	   <% include ../partials/bootstrap-head %>	    

	   <link rel="stylesheet" href="./stylesheets/theme.css"/>
	</head>

	<body>
		<div class="row">
			<div class="col col-12">
			 <% include ../partials/main-nav%>
			</div>	
		</div>
		
	   
		<div class="row mb-3 mt-3">
			  <div class="col-sm-2 col-lg-1 col-xs-12">			
			  </div>
  
			  <div class="col-sm-7 col-lg-8 col-xs-12">
				<div class="card">
					<h5 class="card-header font-weight-bold">My Courses</h5>
				  
					<div class="card-body">
						<% for(var i=0; i < courses.length; i++) { %>
						  <div class="card">
							 <div class="card-header" id="headingTwo">
							   <h5 class="mb-0">
								<button class="btn btn-link text-ilearn">               
								  <%= courses[i].title %>
								</button>                       
							   </h5>
							 </div>
						  </div>
						  <% } %>
					</div>
				  </div>			  	
			  </div>
  
			  <div class="col-sm-3 col-lg-3 col-xs-12">

					<div class="col col-12">
					 
						<div class="card">
						  <h5 class="card-header font-weight-bold">iLearn Help</h5>
						
						  <div class="card-body">
						  <ul class="list-unstyled">
							  <li>
							  	<a href=""><i class="ilearn-i fa fa-envelope"></i> Email iLearn Support</a>
							  </li>
						          
						      <li>
							  	<a href=""><i class="ilearn-i fa fa-phone-square"></i> Contact Information</a>
							  </li>
  
							  <li>
							  	<a href=""><i class="ilearn-i fa fa-info-circle"></i> iLearn Info</a>
							  </li>
						   </ul>
						  </div>
						</div>
					</div>	
				
			  </div>
		   </div>

	</body>
</html>