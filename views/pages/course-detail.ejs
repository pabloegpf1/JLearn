<!DOCTYPE html>
<html lang="en">

<head>
	<% include ../partials/bootstrap-head %>
</head>

<body>
	<div class="row">
		<div class="col col-12">
			<% include ../partials/main-nav%>
		</div>
	</div>

	<div class="row bg-main">
		<div class="col-lg-3 col-sm-3 col-xs-12 left-col ">
			<div class="p-2">
			<div class="card ">
				<div class="card-header font-weight-bold">
					<h5>Course Toolbar</h5>
				</div>
				<div class="list-group">
					<a class="list-group-item list-group-item-action" href="/courses/<%= course.id %>">
						<%= course.subject %><%= course.number %>-<%= course.section %> <%= course.semester %>
					</a>
					<a class="list-group-item list-group-item-action" href="/courses/<%= course.id %>/gradebook">Grades</a>
					<a class="list-group-item list-group-item-action" href="/courses/<%= course.id %>/participants">Participants</a>
					<a class="list-group-item list-group-item-action" href="#">Calendar</a>
					

					<% course.blocks.forEach( (block,index) => { %>
					<a class="list-group-item list-group-item-action" href="#">Course Block <%= index%> - <%= block.title %></a>

					<% }) %>
		
				</div>
		
			</div>
</div>
		</div>
		<div class="col-lg-6 col-sm-8 col-xs-12">
			<div class="card">
				<div class="card-header">
				<h3 class="font-weight-bold">
					<%= course.title%>													
				</h3>

				<h5 class="font-weight-bold">
					<%= course.subject%> 
					<%= course.number %> -
					0<%= course.section %>
					Fall 2019 
					<br>
				</h5>
				</div>

				<div class="breadcrumb-nav ">
					<nav role="navigation">
						<ol class="breadcrumb bg-white">
							<li class="breadcrumb-item">
								<a href="/courses">My Courses</a>
							</li>
							<li class="breadcrumb-item">
								<a href="#" title="course-name">
									<%= course.subject%>	
									<%= course.number%>
									- Section 
									<%= course.section%>
								</a>
							</li>
						</ol>

					</nav>
				</div>
			</div>


			<!--  Course Blocks dynamically lodaded below -->
			<div class="card">
				<div class="card-body">
					
					<div class="text-center padding-bottom-lg">	
					<% if (isProfessor) { %>
						<a href="/courses/<%= course.id %>/add-block" class="btn btn-info" role="button"> 
							+ Add New Course Block
						</a>
					<% } %>
					</div>

					<hr />

					<% course.blocks.forEach((block,index) => { %>
						<div class="card">
							<ul>
									<h3><%= block.title %></h3>
									<ul class="section img-text">
										<li>
											<a class="" onclick="" href="">
												<img src="https://ilearn.sfsu.edu/ay1819/theme/image.php/ilearn34/core/1550063239/f/document-24"
													class="iconlarge activityicon" alt=" " role="presentation">
												<span> <%= block.title %> </span>		
											</a>
										</li>
									</ul>
							</ul>
						</div>
						</hr>
					<% }) %>
				</div>
			</div>
			<!-- end course blocks-->
		</div>

		<div class="col-lg-3 col-sm-12 col-xs-12">
			<% include ../partials/ilearn-support-card%>
		</div>
	</div>
</body>

</html>	
<!-- <%= isProfessor %> -->
</html>
